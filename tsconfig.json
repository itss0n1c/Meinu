{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ESNext"],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist/",
		"resolveJsonModule": true,
		"rootDir": "src/",
		"target": "ES2022",
		"esModuleInterop": true,
		"strict": false,
		"skipLibCheck": true
	},
	"exclude": ["tests/", "dist/"]
}
